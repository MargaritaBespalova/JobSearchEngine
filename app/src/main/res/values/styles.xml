<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavigationView">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="itemIconTint">@color/bottom_menu_color</item>
        <item name="itemTextColor">@color/bottom_menu_color</item>
    </style>

    <style name="BottomNavigationText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="vacancy_recycler">
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="FilterFrameLayoutSettings" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingStart">@dimen/margin_16dp</item>
        <item name="android:paddingTop">@dimen/margin_8dp</item>
        <item name="android:paddingEnd">@dimen/margin_16dp</item>
        <item name="android:paddingBottom">@dimen/margin_8dp</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/size_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_12dp</item>

        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>

        <item name="boxCollapsedPaddingTop">@dimen/margin_8dp</item>
        <item name="placeholderTextAppearance">@style/PlaceholderTextStyle</item>
        <item name="placeholderTextColor">?attr/hint_text_color</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="PlaceholderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FilterEditTextStyle">
        <item name="android:backgroundTint">?attr/hint_background_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/edittext_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/edittext_color</item>
        <item name="android:textColorHint">?attr/hint_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="FilterText">
        <item name="android:textColor">?attr/filter_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FabSearchJobText" parent="FilterText">
        <item name="android:background">@drawable/shape_edittext_search</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingHorizontal">@dimen/margin_12dp</item>
        <item name="android:paddingVertical">@dimen/margin_4dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="DetailsVacancyText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_32sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="NameCompanyStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/edittext_color</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="CityStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/edittext_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="Html_title_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Html_h1_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Html_h2_style">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="FilterLesserTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_4dp</item>
        <item name="android:layout_marginTop">@dimen/margin_6dp</item>
    </style>
    <style name="FilterGreaterTextStyle">
        <item name="android:textColor">?attr/filter_text_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_4dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_6dp</item>
    </style>

</resources>
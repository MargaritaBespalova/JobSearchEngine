<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorPrimaryVariant"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/elevation">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_64dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_24dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_22sp"
            android:text="@string/team" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_24dp"
            android:paddingBottom="@dimen/margin_24dp"
            android:fontFamily="@font/ys_display_bold"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_24dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_32sp"
            android:text="@string/description" />

        <TextView
            android:id="@+id/lead"
            style="@style/Developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lead" />

        <TextView
            android:id="@+id/oldwise"
            style="@style/Developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oldwise" />

        <TextView
            android:id="@+id/flash"
            style="@style/Developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flash" />

        <TextView
            android:id="@+id/meister"
            style="@style/Developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meister" />

        <TextView
            android:id="@+id/bitwise"
            style="@style/Developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bitwise" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>